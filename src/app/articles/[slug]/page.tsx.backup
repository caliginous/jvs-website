// For Edge Runtime compatibility
export const runtime = 'edge';
export const dynamic = 'force-dynamic';

// Helper function to format date
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-GB', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Helper function to strip HTML tags
function stripHtml(html: string): string {
  return html.replace(/<[^>]*>/g, '');
}

async function getArticle(slug: string, isPreview = false): Promise<ContentWithMeta | null> {
  try {
    const content = await d1Client.getContentBySlug(slug, isPreview);
    
    // Filter to only return articles
    if (content && (content.type === 'article' || content.type === 'post')) {
      return content;
    }
    
    return null;
  } catch (error) {
    console.error('Error fetching article from D1:', error);
    return null;
  }
}

// Generate static params for all article slugs
export async function generateStaticParams() {
  try {
    // Get all article slugs from D1
    const articleSlugs = await d1Client.getAllContentSlugs('article');
    const postSlugs = await d1Client.getAllContentSlugs('post'); // Include WordPress posts
    
    const allSlugs = [...articleSlugs, ...postSlugs].map(slug => ({ slug }));

    console.log('=== D1 ARTICLE STATIC PARAMS DEBUG ===');
    console.log('Article slugs from D1:', allSlugs.map(s => s.slug));
    console.log('Total article slugs to generate:', allSlugs.length);
    console.log('=== END DEBUG ===');

    // If no articles found, return a fallback to prevent build error
    if (allSlugs.length === 0) {
      console.log('No articles found in D1, returning fallback');
      return [{ slug: 'sample-article' }];
    }

    return allSlugs;
  } catch (error) {
    console.error('Error generating static params for articles from D1:', error);
    // Return fallback to prevent build error
    return [{ slug: 'sample-article' }];
  }
}

interface ArticlePageProps {
  params: Promise<{ slug: string }>;
  searchParams: Promise<{ preview?: string }>;
}

export default async function ArticlePage({ params, searchParams }: ArticlePageProps) {
  const { slug } = await params;
  const { preview } = await searchParams;
  const isPreview = preview === '1';
  
  const article = await getArticle(slug, isPreview);

